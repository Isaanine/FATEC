    <input type="text" name="telefone" class="form-control" id="telefone" maxlength="15" oninput="mascaraTelefone(this)">
</div>

<script>
    function mascaraTelefone(input) {
        let valor = input.value.replace(/\D/g, ''); // Remove tudo que não for dígito
        if (valor.length > 11) valor = valor.slice(0, 11);

        if (valor.length > 10) {
            // Celular com DDD e 9 dígitos: (99) 99999-9999
            input.value = `(${valor.slice(0,2)}) ${valor.slice(2,7)}-${valor.slice(7,11)}`;
        } else if (valor.length > 6) {
            // Telefone com DDD: (99) 9999-9999
            input.value = `(${valor.slice(0,2)}) ${valor.slice(2,6)}-${valor.slice(6,10)}`;
        } else if (valor.length > 2) {
            input.value = `(${valor.slice(0,2)}) ${valor.slice(2)}`;
        } else {
            input.value = valor;
        }
    }
</script>

